    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity TranslatedRecipe.
    -->
    <changeSet id="20190105180139-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="recipe_id"
                                 baseTableName="translated_recipe"
                                 constraintName="fk_translated_recipe_recipe_id"
                                 referencedColumnNames="id"
                                 referencedTableName="recipe"/>

        <addForeignKeyConstraint baseColumnNames="translated_recipes_id"
                                 baseTableName="translated_recipe"
                                 constraintName="fk_translated_recipe_translated_recipes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cook_book"/>

    </changeSet>
</databaseChangeLog>
